{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "Cloud Watch log-access",
        "Action": [
          "logs:CreateLogGroup",
          "logs:CreateLogStream",
          "logs:PutLogEvents"
        ],
        "Effect": "Allow",
        "Resource": "*"
      }
    ]
  
    
    {
      "Sid" : "s3List",
      "Action" : [
        "s3:List*"
      ],
      "Effect" : "Allow",
      "Resource" : "*"
    },
    
    {
      "Sid" : "s3access",
      "Action" : [
        "s3:GetObject",
        "s3:PutObject",
      ],
      "Effect" : "Allow",
      "Resource" : [
        "arn:aws:s3:::${var.pet_bucket_name}", 
        "arn:aws:s3:::${var.pet_bucket_name}/*"
      ]
    }
  ]
})
}     


